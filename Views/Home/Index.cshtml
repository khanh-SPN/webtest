@{
    ViewData["Title"] = "Trang chủ";
}

<div id="main" class="main">
    <div class="hgrid-stretch frontpage-grid">
        <main id="content-frontpage" class="content-frontpage">
            <div id="frontpage-page-content" class="frontpage-area frontpage-page-content frontpage-staticpage-content module-bg-none module-font-theme frontpage-area-boxed">
                <div class="hgrid main-content-grid">
                    <div id="content" class="content hgrid-span-12 no-sidebar layout-full-width" role="main" itemprop="mainContentOfPage">
                        <div id="content-wrap" class="content-wrap theiaStickySidebar entry-content">

                            <!-- Banner Section -->
                            <section id="banner-section" class="banner-section">
                                <div class="banner-image" style="background-image: url('https://katinat.vn/wp-content/uploads/2024/04/KAT_BANNER-WEB_OBL.jpg');">
                                    <div class="banner-content">
                                        <h1 class="banner-title">Chào Mừng Đến Với KATINAT</h1>
                                        <p class="banner-subtitle">Khám phá hương vị độc đáo, tận hưởng không gian thư giãn tại KATINAT.</p>
                                    </div>
                                </div>
                            </section>

                            <!-- Cà Phê Section -->
                            <section id="coffee-section" class="product-section">
                                <div class="vce-row vce-row--col-gap-30 vce-row-equal-height">
                                    <div class="vce-col vce-col--md-53p">
                                        <h2 class="text-center product-title">Cà Phê</h2>
                                        <p class="text-center product-description">Khám phá hương vị cà phê đậm đà tại KATINAT.</p>
                                        <a href="/coffee" class="btn btn-primary d-block mx-auto">Xem thêm</a>
                                    </div>
                                    <div class="vce-col vce-col--md-47p">
                                        <img src="https://katinat.vn/wp-content/uploads/2023/12/357194611_256587093736825_386966657846776321_n-1.jpg" class="img-fluid rounded" alt="Cà Phê">
                                    </div>
                                </div>
                            </section>

                            <!-- Trà Sữa Section -->
                            <section id="tea-section" class="product-section">
                                <div class="vce-row vce-row--col-gap-30 vce-row-equal-height">
                                    <div class="vce-col vce-col--md-53p">
                                        <h2 class="text-center product-title">Trà Sữa</h2>
                                        <p class="text-center product-description">Thưởng thức trà sữa với các hương vị đa dạng.</p>
                                        <a href="/tea" class="btn btn-primary d-block mx-auto">Xem thêm</a>
                                    </div>
                                    <div class="vce-col vce-col--md-47p">
                                        <img src="https://katinat.vn/wp-content/uploads/2024/03/image.png" class="img-fluid rounded" alt="Trà Sữa">
                                    </div>
                                </div>
                            </section>

                            <!-- Trà Trái Cây Section -->
                            <section id="fruit-tea-section" class="product-section">
                                <div class="vce-row vce-row--col-gap-30 vce-row-equal-height">
                                    <div class="vce-col vce-col--md-53p">
                                        <h2 class="text-center product-title">Trà Trái Cây</h2>
                                        <p class="text-center product-description">Khám phá các loại trà trái cây mát lạnh tại KATINAT.</p>
                                        <a href="/fruit-tea" class="btn btn-primary d-block mx-auto">Xem thêm</a>
                                    </div>
                                    <div class="vce-col vce-col--md-47p">
                                        <img src="https://katinat.vn/wp-content/uploads/2024/04/2.png" class="img-fluid rounded" alt="Trà Trái Cây">
                                    </div>
                                </div>
                            </section>

                            <!-- Tin tức & sự kiện -->
                            <section id="news-section" class="product-section">
                                <div class="vce-row vce-row--col-gap-30 vce-row-equal-height">
                                    <div class="vce-col vce-col--md-auto">
                                        <h2 class="text-center product-title">Tin Tức & Sự Kiện</h2>
                                        <p class="text-center product-description">Theo dõi các tin tức mới nhất từ KATINAT.</p>
                                        <a href="/news" class="btn btn-primary d-block mx-auto">Xem thêm</a>
                                    </div>
                                </div>
                            </section>

                        </div><!-- #content-wrap -->
                    </div><!-- #content -->
                </div><!-- .main-content-grid -->
            </div><!-- #frontpage-page-content -->
        </main><!-- #frontpage-content -->
    </div><!-- .frontpage-grid -->
</div><!-- #main -->
