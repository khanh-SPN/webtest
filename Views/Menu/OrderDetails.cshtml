@model webquanlydouong.Models.Order

<h2>Chi tiết đơn hàng</h2>

<p>Mã đơn hàng: @Model.Id</p>
<p>Ngày đặt hàng: @Model.OrderDate</p>
<p>Trạng thái: @Model.Status</p>

<h3>Sản phẩm trong đơn hàng:</h3>
<ul>
    @foreach (var product in Model.Products)
    {
            <li class="d-flex align-items-center">
                <!-- Thêm ảnh sản phẩm -->
                <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover; margin-right: 15px;" />
                <div>
                    <strong>@product.Name</strong><br />
                    <span class="text-muted">Giá: @product.Price VND</span>
                </div>
            </li>
    }
</ul>
