@model webquanlydouong.Models.Product

@{
    ViewData["Title"] = "Xóa Sản phẩm";
}

<h2>Xóa sản phẩm</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này không?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Loại sản phẩm</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <!-- Hiển thị ảnh sản phẩm nếu có -->
        <dt class="col-sm-2">Ảnh sản phẩm</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                    <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" style="width: 150px; height: 150px; object-fit: cover;" />
            }
            else
            {
                    <span>Không có ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
